<div class="title-wrapper">
  <h1 class='text-center'>ダッシュボード</h1>
</div>

<% if current_user.quizzes%>
<div class="completed-courses">
<% current_user.quizzes.each do |quiz| %>
<%= quiz.id %>
<% end %>
</div>
<% end %>

<div class="title-wrapper home-subtitle">
  <h2 class="text-center">学習分野</h2>
</div>

<div class="container">
  <div class="dashboard-wrapper">


  <div class="row">
    <div class="top-icon col-3 text-center">
      <a href="/categories/1" class="link-no-effect"><i class="fas fa-search fa-9x icon-black"></i></a></br>
    仕事探し
    </div>

    <div class="top-icon col-3 text-center">
      <a href="/categories/2" class="link-no-effect"><i class="fas fa-file-alt fa-9x icon-black"></i></a></br>
    レジュメ作成
    </div>

    <div class="top-icon col-3 text-center">
      <a href="/categories/3" class="link-no-effect"><i class="fas fa-handshake fa-9x icon-black"></i></a></br>
    面接
    </div>

    <div class="top-icon col-3 text-center">
      <a href="/categories/4" class="link-no-effect"><i class="fas fa-briefcase fa-9x icon-black"></i></a></br>
    その他
    </div>
  </div>



  <div class="title-wrapper home-subtitle">
    <h2 class="text-center">最新インタビュー</h2>
  </div>

  <div class="container">
    <div class="row">
      <% @interviews.each do |interview| %>
       <div class="col-md-4 col-lg-4 one-row">
          <div class="card h-100">
            <a href="/interviews/<%= interview.id %>">
              <div class="row-height">
              <%= image_tag interview.image.to_s, class:"card-img-top" %>
              </div>
            </a>
            <div class="card-body">
              <h5 class="card-title"><%= interview.title %></h5>
            </div>
          </div>
        </div>
        <% end %>
     </div>
     <div class="btn-wrapper text-right">
       <%= link_to "インタービュー一覧", interviews_path, class:"btn btn-outline-secondary" %>
     </div>
  </div>
  </div>
</div>
