<p id="notice"><%= notice %></p>

<div class="title-wrapper">
<h1 class="text-center">Documents</h1>
</div>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cover image</th>
      <th>First page image</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><div class="document-image"><%= image_tag document.cover_image.to_s %></div></td>
        <td><div class="document-image"><%= image_tag document.first_page_image.to_s%></div></td>
        <td><%= document.category.category_name %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'New Document', new_document_path %>
