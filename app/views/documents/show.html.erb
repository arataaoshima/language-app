<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
  <div class="col-11 align-center">
    <h2><%= @document.name %></h2>
  <div id="carouselExampleControls" class="carousel slide" data-interval="false" data-wrap="false" data-ride="carousel">
    <div class="carousel-inner">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <% @document.slides.each do |slide| %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%= slide.order+1 %>"></li>
        <% end %>
      </ol>
      <div class="carousel-item active">
        <%= image_tag @document.first_page_image.to_s, class:"d-block w-100 document-img" %>
      </div>
      <% @document.slides.each do |slide| %>
      <div class="carousel-item">
        <%= image_tag slide.image.to_s, class:"d-block w-100 document-img" %>
      </div>
      <% end %>
    </div>
    <% if  %>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
       <i style="font-size: 50px" class="fas fa-arrow-alt-circle-left"></i>
      <span class="sr-only">Previous</span>
    </a>
    <% end %>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <i style="font-size: 50px" class="fas fa-arrow-alt-circle-right"></i>
      <span class="sr-only">Next</span>
    </a>
    </div>
  </div>
</div>

<div class="btn-wrapper text-right">
<%= link_to "カテゴリートップに戻る", "/categories/#{@document.category_id}", class: "btn btn-outline-secondary" %>
</div>
</div>

<% if user_signed_in? && current_user.admin == true %>
  <%= link_to 'Edit', edit_document_path(@document) %> |
  <%= link_to 'Back to All Documents', documents_path %>
<% end %>
