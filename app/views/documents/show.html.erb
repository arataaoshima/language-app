<p id="notice"><%= notice %></p>

<div class="title-wrapper">
  <h2 class="text-center"><%= @document.name %></h2>

</div>
<div class="container">
  <div id="carouselExampleControls" class="carousel slide" data-interval="false">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag @document.first_page_image.to_s, class:"d-block w-100" %>
      </div>
      <% @document.slides.each do |slide| %>
      <div class="carousel-item">
        <%= image_tag slide.image.to_s, class:"d-block w-100" %>
      </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

<div class="btn-wrapper text-right">
<%= link_to "カテゴリートップに戻る", "/categories/#{@document.category_id}", class: "btn btn-outline-secondary" %>
</div>
</div>

<% if user_signed_in? && current_user.admin == true %>
  <%= link_to 'Edit', edit_document_path(@document) %> |
  <%= link_to 'Back to All Documents', documents_path %>
<% end %>
