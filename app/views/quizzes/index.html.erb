<p id="notice"><%= notice %></p>

<h1>Quizzes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th>Answer</th>
      <th>Category</th>
      <th>Group</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.content %></td>
        <td><%= quiz.answer %></td>
        <td><%= quiz.category_id %></td>
        <td><%= quiz.group_id %></td>
        <td><%= quiz.order %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quiz', new_quiz_path %>
