<p id="notice"><%= notice %></p>
<% if flash[:answer_message] %>
<div class="alert alert-success"><%= flash[:answer_message] %>
  <button type="button" class="close" data-dismiss="alert">&times;</button>
</div>
<% end %>
<div class="container">

  <div class="title-wrapper">
    <h1 class="text-center">
      Let's Learn <%= @category.category_name %>
    </h1>
  </div>
  <h2 class="text-center">Texts</h2>
    <%= will_paginate @blogs%>

  <div class="row">
    <% @blogs.each do |blog| %>
     <div class="col-md-4 col-lg-4 one-row">
        <div class="card h-100">
          <a href="/blogs/<%= blog.id %>">
            <div class="row-height">
            <%= image_tag blog.image.to_s, class:"card-img-top" %>
            </div>
          </a>
          <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <div class='time-t'>
              <p class="card-text time"><small class="text-muted">Last updated: <%= blog.updated_at.year %>-<%= blog.updated_at.month %>-<%= blog.updated_at.day %></small></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
  </div>

<div class="lectures-wrapper">
  <% if user_signed_in? %>

    <div class="title-wrapper">
      <h2 class="text-center"> Video Lectures</h2>
    </div>
    <% @videos.each do |video| %>
    <div class="card learning-unit">
      <a href="/videos/<%= video.id%>">
    <div class="card-body">
      <%= video.title %>
    </div>
      </a>
  </div>
    </br>
    <% end %>

  <% else %>
  <% end %>
  <% if user_signed_in? && current_user.admin == true %>
  <%= link_to 'Edit', edit_category_path(@category) %> |
  <%= link_to 'Back', categories_path %>
  <% end %>
</div>


</div>
