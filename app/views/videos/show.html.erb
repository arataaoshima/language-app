<p id="notice"><%= notice %></p>

<div class="title-wrapper">
  <h1 class="text-center"><%= @video.title %></h1>
</div>
<div class="container blog-table-wrapper">
<p class="text-center">
  <iframe width="840" height="472.5" src="<%= @video.url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</p>

<p>
  <div class="btn btn-outline-secondary"><%= @video.category.category_name %></div>
  <div class="btn btn-outline-secondary"><%= @video.group.name %></div>
</p>
<div class="text-center">
<%= link_to 'Start Lesson Quiz', "/quiz/#{@video.category_id}/#{@video.group_id}/1", class:"btn btn-outline-secondary btn-lg text-center" %></br>
</div>
<% if user_signed_in? && current_user.admin == true %>
<%= link_to 'Edit', edit_video_path(@video) %> |
<%= link_to 'Back', videos_path %>
<% end %>
</div>
